---
import { categories, games, getGamesByCategory } from '../../data/games';

export function getStaticPaths() {
  return categories.map((category) => ({
    params: { id: category.id },
    props: { category },
  }));
}

const { category } = Astro.props;

const categoryGames = getGamesByCategory(category.id);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{category.icon} {category.name} - Juegos del Campamento</title>
	</head>
	<body>
		<div class="container">
			<a href="/" class="back-button">‚Üê Volver a todos los juegos</a>

			<header>
				<h1>{category.icon} {category.name}</h1>
				<p>{category.description}</p>
			</header>

			<div class="category-stats">
				<div class="stat-card">
					<span class="stat-number">{categoryGames.length}</span>
					<span class="stat-label">Juegos en esta categoria</span>
				</div>
			</div>

			<div class="games-grid">
				{categoryGames.map(game => (
					<a href={`/juego/${game.id}`} class="game-card">
						<div class="game-image">
							<div class="game-placeholder">{category.icon}</div>
						</div>
						<div class="game-content">
							<h2 class="game-title">{game.title}</h2>
							<p class="game-description">{game.description}</p>
							<div class="game-meta">
								<span class="game-type">{game.type}</span>
							</div>
							<div class="game-materials">
								{game.materials.slice(0, 3).map(material => (
									<span class="material-tag">{material}</span>
								))}
								{game.materials.length > 3 && (
									<span class="material-tag">+{game.materials.length - 3}</span>
								)}
							</div>
						</div>
					</a>
				))}
			</div>
		</div>

		<style is:global>
			* {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
				line-height: 1.6;
				color: #333;
				background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
				min-height: 100vh;
				padding: 2rem 1rem;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
			}

			.back-button {
				display: inline-flex;
				align-items: center;
				color: white;
				text-decoration: none;
				font-weight: 600;
				padding: 0.75rem 1.5rem;
				background: rgba(255, 255, 255, 0.2);
				border-radius: 8px;
				margin-bottom: 2rem;
				transition: background 0.3s;
			}

			.back-button:hover {
				background: rgba(255, 255, 255, 0.3);
			}

			header {
				text-align: center;
				margin-bottom: 2rem;
				color: white;
			}

			header h1 {
				font-size: 3rem;
				margin-bottom: 0.5rem;
				text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
			}

			header p {
				font-size: 1.2rem;
				opacity: 0.9;
			}

			.category-stats {
				margin-bottom: 2rem;
			}

			.stat-card {
				background: white;
				padding: 2rem;
				border-radius: 12px;
				text-align: center;
				box-shadow: 0 4px 6px rgba(0,0,0,0.1);
			}

			.stat-number {
				display: block;
				font-size: 3rem;
				font-weight: bold;
				color: #667eea;
			}

			.stat-label {
				font-size: 1rem;
				color: #666;
			}

			.games-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
				gap: 2rem;
			}

			.game-card {
				background: white;
				border-radius: 12px;
				overflow: hidden;
				box-shadow: 0 4px 6px rgba(0,0,0,0.1);
				transition: transform 0.3s, box-shadow 0.3s;
				text-decoration: none;
				color: inherit;
				display: block;
			}

			.game-card:hover {
				transform: translateY(-5px);
				box-shadow: 0 8px 12px rgba(0,0,0,0.15);
			}

			.game-image {
				height: 200px;
				overflow: hidden;
				background: #f0f0f0;
			}

			.game-image img {
				width: 100%;
				height: 100%;
				object-fit: cover;
			}

			.game-placeholder {
				width: 100%;
				height: 100%;
				display: flex;
				align-items: center;
				justify-content: center;
				font-size: 4rem;
			}

			.game-content {
				padding: 1.5rem;
			}

			.game-title {
				font-size: 1.5rem;
				margin-bottom: 0.5rem;
				color: #333;
			}

			.game-description {
				color: #666;
				margin-bottom: 1rem;
				line-height: 1.5;
			}

			.game-meta {
				margin-bottom: 1rem;
			}

			.game-type {
				display: inline-block;
				background: #48bb78;
				color: white;
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				font-size: 0.875rem;
				font-weight: 600;
			}

			.game-materials {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
			}

			.material-tag {
				background: #f0f0f0;
				color: #555;
				padding: 0.25rem 0.75rem;
				border-radius: 20px;
				font-size: 0.875rem;
			}

			@media (max-width: 768px) {
				header h1 {
					font-size: 2rem;
				}

				.games-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</body>
</html>
